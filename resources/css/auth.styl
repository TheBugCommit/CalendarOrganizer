#auth-card
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center

.btn-opacity-0
    opacity: 0.2
    transition opacity 0.4s ease-in-out !important

.btn-opacity-1
    opacity: 1


.title
    font-size 2.2rem
    color $text-color
    margin-bottom 10px
    width: 22rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

.login-link
    font-size: 1rem
    color $button-color
    transition color 0.3s
    text-decoration: none
    &:hover
        transition color 0.3s
        color $green !important

.input_group
    position relative
    padding 15px 0 0
    margin-top 10px
    width 100%

.input_field
    font-family inherit
    width 100%
    border 0
    border-bottom 1px solid $grey
    outline 0
    font-size 14px
    padding 7px 0
    color $text-color
    background transparent
    transition border-color 0.2s
    &::placeholder
        color transparent
    &:placeholder-shown
        & ~ .input_label
            font-size 14px
            cursor text
            top 20px
    &.active
        padding-bottom 6px
        border-width 1px
        border-color $green
        & ~ .input_label
            position absolute
            top 0
            display block
            transition 0.2s
            font-size 15px
            color $green
            font-weight 600

    &.invalid
        border-color $red
        & ~ .input_label
            color $red

    &:required, &:invalid
        box-shadow none

.input_label
    position absolute
    top 0
    display block
    transition 0.2s
    font-size 1rem
    color $grey

.input-error
    color $red
    font-size 12px

.radio
    color $text-color
    >label
        color $grey

.selectize-control {
  width: 100% !important;
}
span.error
    color: $red;
    font-family: "Montserrat", sans-serif;
    font-size: 12px;
    position: absolute;
    bottom: -20px;
    right: 0;
    display: none;
    &::before
        content ''
        display block
        width 100%
        background-color $red
        height 1px
        transition: width .3s;


.brand-wrapper
    display flex
    align-items center
    gap 1rem
    margin-bottom 19px
    .logo
        height 37px

.login-card
    border 0
    border-radius 27.5px
    box-shadow 0 10px 30px 0 rgba(172, 168, 168, 0.43)
    overflow hidden
    .card-body
        padding 85px 60px 60px
    .form-control
        border 1px solid #d5dae2
        padding 15px 25px
        margin-bottom 20px
        min-height 45px
        font-size 13px
        line-height 15
        font-weight normal
        &::-webkit-input-placeholder
            color #919aa3
        &::-moz-placeholder
            color #919aa3
        &:-ms-input-placeholder
            color #919aa3
        &::-ms-input-placeholder
            color #919aa3
        &::placeholder
            color #919aa3
    .login-btn
        padding 13px 20px 12px
        background-color #000
        border-radius 4px
        font-size 17px
        font-weight bold
        line-height 20px
        color #fff
        margin-bottom 24px
        &:hover
            border 1px solid #000
            background-color transparent
            color #000
    .forgot-password-link
        font-size 14px
        color #919aa3
        margin-bottom 12px

.login-card-img
    border-radius 0
    width 100%
    height 100%
    -o-object-fit cover
    object-fit cover

@media (max-width: 422px)
    .login-card
        .card-body
            padding 35px 24px

.login-card-description
    font-size 25px
    color #000
    font-weight normal
    margin-bottom 23px

.login-card-footer-text
    font-size 16px
    color #0d2366
    margin-bottom 60px

@media (max-width: 767px)
    .login-card-footer-text
        margin-bottom 24px

.login-card-footer-nav
    a
        font-size 14px
        color #919aa3
