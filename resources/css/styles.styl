@import './colors.styl';
@import './loader.styl';
@import './fields.styl';

@import './auth.styl';

:root
    --header-height 3rem
    --nav-width 68px
    --first-color $button-color
    --first-color-light $white
    --green-color $green
    --body-font 'Nunito', sans-serif
    --normal-font-size 1rem
    --z-fixed 100

.main-container
    margin-top: 66px;
    max-height: 97vh;
    min-height: 87vh;
    height: 87vh;
    >.card
        height 100%
        overflow auto
        box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;

#eventEditTooltip
    display  none

.tippy-box
    background-color: $button-color;
    color: $white;
    padding: 0.5rem;
    box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
    border-radius: 3%;
    > .tippy-svg-arrow
        fill $button-color

.clr-picker.clr-open, .clr-picker[data-inline=true]
    z-index 9999

.color-field
    opacity 0
    width 3rem

*,::before,::after
    box-sizing border-box

body
    position relative
    margin var(--header-height) 0 0 0
    padding 0 1rem
    font-family var(--body-font)
    font-size var(--normal-font-size)

a
    text-decoration none

main
    height 100%

.header
    width 100%
    height var(--header-height)
    position fixed
    top 0
    left 0
    display flex
    align-items center
    justify-content space-between
    padding 0 1rem
    z-index var(--z-fixed)
    transition .5s

.header_toggle
    color var(--first-color)
    font-size 1.5rem
    cursor pointer

.header_img
    width 35px
    height 35px
    display flex
    justify-content center
    border-radius 50%
    overflow hidden
    img
        width 40px

.l-navbar
    position fixed
    top 0
    left -30%
    width var(--nav-width)
    height 100vh
    background-color var(--first-color)
    padding .5rem 1rem 0 0
    transition .5s
    z-index var(--z-fixed)

.nav
    height 100%
    display flex
    flex-direction column
    justify-content space-between
    overflow hidden

.nav_logo, .nav_link
    display grid
    grid-template-columns max-content max-content
    align-items center
    column-gap 1rem
    padding .5rem 0 .5rem 1.5rem

.nav_logo
    margin-bottom 2rem
    text-decoration none

.nav_logo-icon
    width: 1.5rem
    color var(--green-color)

.nav_logo-name
    color var(--first-color-light)
    font-weight 700

.nav_link
    position relative
    color var(--first-color-light)
    margin-bottom 1.5rem
    text-decoration none
    transition .3s
    &:hover
        color var(--green-color)
    &.active
        color var(--green-color)
        &::before
            content ''
            position absolute
            left 0
            width 2px
            height 32px
            background-color var(--green-color)

.nav_icon
    font-size 1.25rem

.show
    left 0

.body-pd
   padding-left calc(var(--nav-width) + 1rem)

.height-100
    height 100vh

ul.nav
    height unset !important

.calendar-list
    .calendar
        border-left 4px solid $green
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        &:hover
            transform scale(1.01)
            transition transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out
            cursor pointer
            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
            border-left-color: $button-color

.short-text-100 {
    overflow:hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    max-width: 100px
}

.short-text-120 {
    overflow:hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    max-width: 125px
}

.short-text-200 {
    overflow:hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    max-width: 200px
}

.short-text-350 {
    overflow:hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    max-width: 350px
}

.short-multiline-text {
    overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: var(--lines);
           line-clamp: var(--lines);
   -webkit-box-orient: vertical;
}

.blod-text {
    font-weight: bold !important
}

.text
    color $text-color
    font-size: 1rem

.cursive-gray-text {
    font-style: italic
    font-size: 12px
    color $text-light
}

.grey-text {
    color $text-light
}

.font-medium
    font-size: 20px

.green-text
    color $green !important

.c-link
    font-size: 14px
    color $grey
    transition color 0.3s
    text-decoration: none
    &:hover
        transition color 0.3s
        color $green !important

.verification-mail-box
    width: 100%;
    height 100%
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items center


.floating-container
    position absolute
    width 100px
    height 100px
    bottom: 30px;
    right: 10px;
    &:hover
        .floating-button
            transition box-shadow .2s, font-size .3s
            font-size 30px
            box-shadow 0 10px 25px $button-color

    .floating-button
        display: flex
        justify-content center
        align-items center
        position absolute
        border: none
        width 65px
        height 65px
        background $button-color
        transition box-shadow .2s
        bottom 0
        border-radius 50%
        left 0
        right 0
        margin auto
        color white
        line-height 65px
        text-align center
        font-size 25px
        z-index 99
        box-shadow 0 10px 25px -5px $button-color
        cursor pointer

.adminActions
    position absolute
    bottom: 30px;
    right: 30px;
    z-index 99
    a, button
        i
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
    button
        border 0

.adminButton
    height 60px
    width 60px
    background-color $button-color
    border-radius 50%
    display block
    color #fff
    text-align center
    position relative
    z-index 1
    i
        font-size 22px

.adminButtons
    position absolute
    width 100%
    bottom 120%
    text-align center
    a, button
        display block
        width 45px
        height 45px
        border-radius 50%
        text-decoration none
        margin 10px auto 0
        line-height 1.15
        color #fff
        opacity 0
        visibility hidden
        position relative
        box-shadow 0 0 5px 1px rgba(51, 51, 51, .3)
        &:nth-child(1)
            background-color $button-color
            color $white
            transition opacity .2s ease-in-out .3s, transform .15s ease-in-out, color .3s
        &:nth-child(2)
            background-color $button-color
            color $white
            transition opacity .2s ease-in-out .25s, transform .15s ease-in-out, color .3s
         &:nth-child(3)
            background-color $button-color
            color $white
            transition opacity .2s ease-in-out .45s, transform .15s ease-in-out, color .3s
        &:hover
            color $green
            transition color .3s
            transform scale(1.05)

.adminToggle
    -webkit-appearance none
    position absolute
    border-radius 50%
    top 0
    left 0
    margin 0
    width 100%
    height 100%
    cursor pointer
    background-color transparent
    border none
    outline none
    z-index 2
    transition box-shadow .2s ease-in-out
    box-shadow 0 3px 5px 1px rgba(51, 51, 51, .3)
    &:hover
        box-shadow 0 3px 6px 2px rgba(51, 51, 51, .3)
    &:checked
        & ~ .adminButtons
            a, button
                opacity 1
                visibility visible



.btn
    &:focus
        outline unset !important
        box-shadow: unset !important

.btn-save
    color $white !important
    background-color $button-color !important
    transition transform 0.3s !important

    &:hover
        color $green !important
        transition transform 0.3s !important
        transform scale(1.1)

.btn-default
    color $white !important
    background-color $button-color !important
    transition color 0.3s !important
    &:hover
        color $green !important
        transition color 0.3s !important

.btn-tab
    background-color $white !important
    color $text-color !important
    &.active
        background-color $button-color !important
        color $white !important

.btn-edit
    background-color $white !important
    color $button-color !important
    &:hover
        transition color 0.3s
        color $green !important

.btn-edit-popup
    background-color transparent !important
    color $white !important

.btn-delete
    &:hover
        color $red !important
.btn-delete-popup
    color $white !important
    background-color transparent !important

.swal2-confirm
    background-color $button-color !important
    &:focus
        outline unset !important
        box-shadow: unset !important
.swal2-cancel
    background-color $red !important
    &:focus
        outline unset !important
        box-shadow: unset !important

.category
    width 100%
    padding 10px 0px
    background-color $white
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    border-left 4px solid $green
    margin-top: 1.3rem
    transition box-shadow 0.3s ease-in-out
    transition border-left-color 0.3s ease-in-out
    &:hover
        border-left-color $button-color
        transition box-shadow 0.3s ease-in-out, border-left-color 0.3s ease-in-out
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;

.export_events
    td.color
        position relative
        &:after
            content: '';
            background-color: var(--color);
            width: 10px;
            height: 10px;
            position: absolute;
            top: 50%;
            border-radius: 50%;
            transform: translate(10%, -50%);

    &.table>:not(caption)>*>*
        padding: 1rem 0.5rem 0;

.overflow-box
    overflow auto

#v-pills-tabContent
    width: 100% !important;
    >div
        width: 100% !important;

.popup-event-info
    margin: 0 !important;
    padding: 0.5rem !important;
    li
        display flex
        gap: 1rem


//calendar
.fc .fc-col-header-cell-cushion, .fc-daygrid-day-number
    color $text-color !important
.fc-view-harness.fc-view-harness-active
    height 100vh !important
.fc .fc-button
    color $white !important
    background-color $button-color !important
    transition color 0.3s !important
    border: none
    &:hover
        color $green !important
        transition color 0.3s !important
    &:focus
        outline unset !important
        box-shadow: unset !important

.fc-timegrid-slot
    background-color $white !important

.fc-daygrid-event-harness a
    color $text-color !important

.tox.tox-tinymce
    width: 97% !important

.event-published
    color: #3be8b0;

#help
    h2
        text-decoration: underline
        font-size: 1.5rem
    *
        color $text-color
@media screen and (min-width: 768px)
    .header
        height calc(var(--header-height) + 1rem)
        padding 0 2rem 0 calc(var(--nav-width) + 2rem)
    .header_img
        width 40px
        height 40px
        img
            width 45px
    .l-navbar
        left 0
        padding 1rem 1rem 0 0
        &.show
            width calc(var(--nav-width) + 156px)
    .body-pd
        padding-left calc(var(--nav-width) + 188px)

@media(max-width: 767px)
  .fc-toolbar.fc-header-toolbar
    display: flex;
    flex-direction: column;

  .fc-toolbar.fc-header-toolbar .fc-left
    order: 3;

  .fc-toolbar.fc-header-toolbar .fc-center
    order: 1;

  .fc-toolbar.fc-header-toolbar .fc-right
    order: 2;

@keyframes come-in
    0%
        -webkit-transform translateX(100px)
        transform translateX(100px)
        opacity 0
    30%
        -webkit-transform translateX(-50px) scale(0.4)
        transform translateX(-50px) scale(0.4)

    70%
        -webkit-transform translateX(0px) scale(1.2)
        transform translateX(0px) scale(1.2)
    100%
        -webkit-transform translateX(0px) scale(1)
        transform translateX(0px) scale(1)
        opacity 1
