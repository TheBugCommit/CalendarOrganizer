.radio
    input[type=radio]
        position absolute
        opacity 0
        & + .radio-label
            &:before
                content ""
                background #f4f4f4
                border-radius 100%
                border 1px solid #b4b4b4
                display inline-block
                width 1em
                height 1em
                position relative
                top 0.3em
                margin-right 0.3em
                vertical-align top
                cursor pointer
                text-align center
                transition all 250ms ease
            &:empty
                &:before
                    margin-right 0
    input[type=radio]:checked
        & + .radio-label
            &:before
                background-color $button-color
                box-shadow inset 0 0 0 4px #f4f4f4
    input[type=radio]:focus
        & + .radio-label
            &:before
                outline none
                border-color $button-color
    input[type=radio]:disabled
        & + .radio-label
            &:before
                box-shadow inset 0 0 0 4px #f4f4f4
                border-color #b4b4b4
                background #b4b4b4

input[type=textarea]
    overflow: auto;
    width: 100% !important;
    border: none !important;
    border-bottom: 1px solid $grey !important;
    outline: none;
    :focus-visible
        border none !important;
        border-bottom: 1px solid $grey !important;

